{% extends "skeleton/crud/actions/new.php.twig" %}

{% set bundle_short_name = bundle|replace({'Bundle':''})|capitalize %}

{% block method_return %}
    return $this->render('@{{ bundle_short_name }}/{{ entity|lower|replace({'\\': '/'}) }}/new.html.twig', array(
    '{{ entity_singularized }}' => ${{ entity_singularized }},
    'form' => $form->createView(),
    ));
{% endblock method_return %}